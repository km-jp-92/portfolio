<div class="max-w-md w-full mx-auto bg-white shadow-md rounded-lg p-8 mt-6">

  <% if @error %>
    <p class="text-red-600"><%= @error %></p>
  <% end %>

  <%= form_with url: document_group_documents_path(@document_group), data: { turbo: false }, method: :post, class: "space-y-4" do |f| %>
    <div class="mb-4">
      <%= f.label :password, "パスワード", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.submit "送信", class: "w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

</div>
