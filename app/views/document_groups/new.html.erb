<!-- 固定ヘッダー（ロゴ + ナビ） -->
<header class="w-full fixed top-0 left-0 bg-white/90 backdrop-blur shadow-sm z-50">
  <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
    <div class="text-2xl font-extrabold text-blue-700 tracking-tight drop-shadow-sm">PDFSync</div>

    <nav class="hidden md:flex space-x-6 text-blue-800 font-medium">
      <a href="#features" class="hover:text-blue-600 flex items-center">機能</a>
      <a href="#scenes" class="hover:text-blue-600 flex items-center">利用シーン</a>
      <a href="#flow" class="hover:text-blue-600 flex items-center">使い方</a>
      <label for="emailModal" class="cursor-pointer bg-blue-500 text-white px-4 py-2 rounded-xl hover:bg-blue-600 shadow">今すぐ始める</label>
    </nav>
  </div>
</header>

<!-- 全体ラップ -->
<div class="min-h-screen bg-gradient-to-b from-blue-50 to-blue-100 flex flex-col items-center justify-start px-6 pt-36 pb-20 space-y-20">

  <!-- Hero セクション -->
  <section class="text-center max-w-4xl mx-auto">

    <p class="text-3xl md:text-3xl font-semibold text-blue-800">リアル会議効率化ツール</p>

    <p class="text-xl md:text-2xl font-medium text-gray-700 mt-6 leading-relaxed">
      
      資料をめくるだけで全員が追従。<br>匿名チャットで質問も活性化。メモはAIが整理。
      <span class="text-blue-600 font-semibold"><br>登録不要、メールアドレスだけですぐに開始</span>
    </p>

    <div class="mt-12">
      <label for="emailModal" class="cursor-pointer bg-blue-600 hover:bg-blue-700 text-white text-xl px-10 py-4 rounded-2xl shadow-xl hover:scale-105 transition">今すぐ始める</label>
    </div>
  </section>

  <!-- 特徴・メリット -->
  <section id="features" class="w-full max-w-6xl mx-auto text-center">
    <h2 class="text-3xl font-bold text-blue-900 mb-10">主な機能</h2>

    <div class="grid gap-10 md:grid-cols-3">
      <div class="flex flex-col items-center bg-white rounded-3xl shadow-2xl p-10 hover:-translate-y-2 hover:scale-105 transition-all">
        <div class="text-6xl mb-4 text-blue-600">📄</div>
        <h3 class="text-2xl font-bold text-blue-700 mb-2">PDFページ同期</h3>
        <p class="text-blue-800">発表ページを全員にリアルタイム共有</p>
      </div>

      <div class="flex flex-col items-center bg-white rounded-3xl shadow-2xl p-10 hover:-translate-y-2 hover:scale-105 transition-all">
        <div class="text-6xl mb-4 text-blue-500">💬</div>
        <h3 class="text-2xl font-bold text-blue-700 mb-2">チャット（匿名）</h3>
        <p class="text-blue-800">気兼ねなく質問・意見</p>
      </div>

      <div class="flex flex-col items-center bg-white rounded-3xl shadow-2xl p-10 hover:-translate-y-2 hover:scale-105 transition-all">
        <div class="text-6xl mb-4 text-blue-500">📝</div>
        <h3 class="text-2xl font-bold text-blue-700 mb-2">メモ＆AI整形</h3>
        <p class="text-blue-800">自分のメモを、AIが読みやすく整理</p>
      </div>
    </div>
  </section>

  <!-- 利用シーン -->
  <section id="scenes" class="w-full max-w-5xl mx-auto text-center">
    <h2 class="text-3xl font-bold text-blue-900 mb-10">利用シーン</h2>

    <div class="grid gap-8 md:grid-cols-3">
      <div class="flex flex-col items-center p-8 bg-gradient-to-r from-blue-100 to-blue-50 rounded-3xl shadow-lg hover:-translate-y-1 transition">
        <div class="text-6xl mb-4">🎓</div>
        <h3 class="text-xl font-bold text-blue-700 mb-2">セミナー・勉強会</h3>
        <p class="text-blue-900">講師の資料を全員同期。質問も簡単</p>
      </div>

      <div class="flex flex-col items-center p-8 bg-gradient-to-r from-blue-100 to-blue-50 rounded-3xl shadow-lg hover:-translate-y-1 transition">
        <div class="text-6xl mb-4">♻️</div>
        <h3 class="text-xl font-bold text-blue-700 mb-2">ペーパーレス会議</h3>
        <p class="text-blue-900">印刷不要で準備も簡単</p>
      </div>

      <div class="flex flex-col items-center p-8 bg-gradient-to-r from-blue-100 to-blue-50 rounded-3xl shadow-lg hover:-translate-y-1 transition">
        <div class="text-6xl mb-4">🤝</div>
        <h3 class="text-xl font-bold text-blue-700 mb-2">打ち合わせ</h3>
        <p class="text-blue-900">PDFをアップロードするだけで完了</p>
      </div>
    </div>
  </section>

  <!-- 使い方の流れ -->
  <section id="flow" class="w-full max-w-5xl mx-auto text-center">
  <h2 class="text-3xl font-bold text-blue-900 mb-10">使い方</h2>

  <div class="grid gap-8 md:grid-cols-2 text-left">

    <div class="flex flex-col items-center bg-white rounded-3xl shadow-2xl p-8 hover:-translate-y-1 transition">
      <div class="text-2xl font-bold text-blue-600 mb-3 flex items-center">
        <span class="mr-3">1.</span> 資料アップ&URL共有
      </div>
      <p class="text-gray-700">メールに届いたURLにPDF資料をアップロード。<br>参加者に会議URLを送るだけ。</p>
    </div>

    <div class="flex flex-col items-center bg-white rounded-3xl shadow-2xl p-8 hover:-translate-y-1 transition">
      <div class="text-2xl font-bold text-blue-600 mb-3 flex items-center">
        <span class="mr-3">2.</span> 会議開始！
      </div>
      <p class="text-gray-700">参加者が会議URLにアクセス・即スタート。</p>
    </div>

  </div>
</section>



  <!-- CTA ボタン -->
  <div class="text-center mt-12">
    <label for="emailModal" class="cursor-pointer bg-blue-600 hover:bg-blue-700 text-white text-xl px-10 py-4 rounded-2xl shadow-xl hover:scale-105 transition">今すぐ始める</label>
  </div>

  <!-- メール入力モーダル -->
  <input type="checkbox" id="emailModal" class="modal-toggle" />
  <div class="modal modal-bottom sm:modal-middle">
    <div class="modal-box max-w-md p-8 rounded-3xl shadow-2xl">
      <h3 class="font-bold text-xl text-blue-900 mb-4">会議を始めるためにメールアドレスを入力</h3>
      <p class="text-sm text-gray-500 mb-6">入力いただいたメールアドレスにPDFアップロード・閲覧用URLが届きます。</p>

      <%= form_with model: @document_group, data: { turbo: false }, class: "flex flex-col space-y-4" do |f| %>
        <%= f.email_field :email, required: true, placeholder: "example@example.com", class: "input input-bordered w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>

        <div class="modal-action flex flex-col space-y-2">
          <%= f.submit "送信", class: "btn btn-primary w-full bg-blue-500 text-white hover:bg-blue-600" %>
          <label for="emailModal" class="btn btn-ghost w-full bg-gray-100 text-gray-500 hover:bg-gray-200">キャンセル</label>
        </div>
      <% end %>
    </div>
  </div>

  <!-- フッター -->
  <footer class="mt-20 text-center text-sm text-gray-500">
    <a href="/privacy" class="underline hover:text-gray-700 mx-2">プライバシーポリシー</a>
    <span class="mx-2">|</span>
    <a href="/terms" class="underline hover:text-gray-700 mx-2">利用規約</a>
  </footer>

</div>
