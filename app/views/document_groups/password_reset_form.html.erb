<div class="min-h-screen flex flex-col items-center justify-center bg-gray-50 px-4">
  <h1 class="text-2xl font-bold text-center mb-6">パスワード再設定</h1>

  <%= form_with(model: @document_group, url: update_document_group_password_reset_path(reset_token: @document_group.reset_token), method: :patch, data: { turbo: false }, 
      class: "w-full max-w-md bg-white p-6 rounded shadow") do |f| %>

  <%= hidden_field_tag :reset_token, @document_group.reset_token %>

    <!-- パスワード -->
    <div class="mb-4">
      <%= f.label :password, "パスワード", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, class: "mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- パスワード確認 -->
    <div class="mb-4">
      <%= f.label :password_confirmation, "パスワード確認", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, class: "mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

     <!-- 送信ボタン -->
    <div>
      <%= f.submit "パスワードを変更する", class: "w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition-colors" %>
    </div>

  <% end %>

  <% if @document_group.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <ul>
        <% @document_group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

</div>
